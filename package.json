{
  "name": "dr-gen",
  "version": "0.1.1",
  "description": "Generate lightweight Decision Records from decision.yaml",
  "license": "MIT",
  "type": "module",
  "bin": {
    "dr-gen": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/cli.ts",
    "prepack": "npm run build",
    "prepublishOnly": "npm run build",
    "release:artifacts": "node scripts/release-artifacts.mjs",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.30",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0"
  }
}
